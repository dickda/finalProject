<script style="javascript">
  function addImages() {
      document.getElementById("imagesGroup").innerHTML  = document.getElementById("imagesGroup").innerHTML  + '<div class="col-sm-10"><input type="file" id="product_screenshots_attributes_0_image" name="product[screenshots_attributes][][image]" multiple="multiple"></div>';
  }
</script>
<%= form_for  @product, :html => {:multipart => true, :class => "form-horizontal product" }  do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
  </div>
  
   <div class="form-group">
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price, :step => "0.01" %>
    </div>
    <div class="field">
      <%= f.label :stock %><br>
      <%= f.number_field :stock %>
    </div>
  </div>

      <%= f.label :image, :class => 'col-sm-2 control-label' do %>
        Images
      <% end %>
       <a href = "#" id="addMoreImages" onclick="addImages();" class = "btn btn-primary center" style="color:white">Add More Images</a>

  <div id="imagesGroup"
    <div class="form-group">
    <%= f.fields_for :screenshots, @product.screenshots do |f_screenshot| %>
      <div class="col-sm-10">
        <%= f_screenshot.file_field :image, multiple: true, :name=>'product[screenshots_attributes][][image]' %>
      </div>
    <% end %>
  </div>
  </div>
   
 
  <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
  </div>
 
<% end %>
