<%= form_for  @product, :html => {:multipart => true, :class => "form-horizontal product" }  do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
  </div>
  
   <div class="form-group">
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price, :step => "0.01" %>
    </div>
    <div class="field">
      <%= f.label :stock %><br>
      <%= f.number_field :stock %>
    </div>
  </div>
  <div class="form-group">
    <%= f.fields_for :screenshots, @product.screenshots do |f_screenshot| %>
      <%= f_screenshot.label :image, :class => 'col-sm-2 control-label' do %>
        Screenshots
      <% end %>
      <div class="col-sm-10">
        <%= f_screenshot.file_field :image, multiple: true, :name=>'product[screenshots_attributes][][image]', :class => 'form-control' %>
      </div>
    <% end %>
  </div>
 
  <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
  </div>
 
<% end %>
