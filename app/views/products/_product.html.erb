<div class="product">
        <div class="col-xs-6 col-md-3">
                 <h3 class= "midrow"> <%= link_to product.title , product %></h3>
                <% if (product.stock > 0) %>
                        <div class="thumbnail"><%= image_tag product.screenshots.first.image_url(:thumb) if product.screenshots.length != 0 %> </div>
                        <div class = "prodPrice, center"> <%=number_to_currency(product.price, :unit => "$") %></div>
                <% else %>
                        <div class="thumbnail"><%= image_tag product.screenshots.first.image_url(:thumb), :class => 'outOfStock' if product.screenshots.length != 0 %> 
                          <p class="outOfStockText">
                            Out of Stock
                          </p></div>
                <% end %>
                  
               
        </div>
        
       
</div>